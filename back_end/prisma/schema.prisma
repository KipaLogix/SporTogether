generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique
  email          String   @unique
  password       String
  latitude       Float?
  longitude      Float?
  country        String?
  city           String?
  role           Role     @default(USER)
  first_name     String?
  last_name      String?
  createdAt      DateTime @default(now())
  Event          Event[]  @relation("CreatedEvents")
  Participations Event[]  @relation("EventParticipants")
}

model Event {
  id           String   @id @default(uuid())
  title        String
  description  String
  date         DateTime
  latitude     Float?
  longitude    Float?
  sport        Sport[]
  createdAt    DateTime @default(now())
  createdBy    User     @relation("CreatedEvents", fields: [userId], references: [id])
  userId       String
  Participants User[]   @relation("EventParticipants")
}

enum Role {
  USER
  ADMIN
}

enum Sport {
  FOOTBALL
  BASKETBALL
  TENNIS
  VOLLEYBALL
  HANDBALL
  RUGBY
  SWIMMING
  RUNNING
  CYCLING
  GOLF
  BOXING
  MARTIAL_ARTS
  YOGA
  DANCE
  FITNESS
  GYMNASTICS
  SKIING
  SNOWBOARDING
  ICE_SKATING
  ICE_HOCKEY
  CURLING
  SQUASH
  BADMINTON
  TABLE_TENNIS
  BILLIARDS
  DARTS
  CHESS
  POKER
  BRIDGE
  BACKGAMMON
  VIDEO_GAMES
  BOARD_GAMES
  CARD_GAMES
  OTHER
}
